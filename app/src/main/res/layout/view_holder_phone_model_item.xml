<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/phoneModelImageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:srcCompat="@drawable/brand_google" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phoneModelNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/phone_model_name_text_view_margin_top"
            android:text="TextView" />

        <TextView
            android:id="@+id/phoneModelPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <RadioGroup
            android:id="@+id/phoneModelStorageRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/sixFourGbRadioBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="64GB" />

            <RadioButton
                android:id="@+id/oneTwoEightGbRadioBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="128GB" />

            <RadioButton
                android:id="@+id/twoFiveSixGbRadioBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="256GB" />


        </RadioGroup>

        <Spinner
            android:id="@+id/phoneColorsSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag=""
            android:entries="@array/phone_colors" />

        <Button
            android:id="@+id/selectPhoneBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/my_button_style"
            android:text="@string/select_phone_model_btn_text" />


    </LinearLayout>

</LinearLayout>